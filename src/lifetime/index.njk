<section class="contact-section" id="contact">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-info">
        <h3>Contact Us Today</h3>
        <p>Ready to improve your home? Contact us today for a free, no-obligation estimate on any of our services.</p>
        
        <div class="contact-details">
          <div class="contact-item phone-highlight">
            <strong>Call Now: (833) 941-6888</strong>
            <p>Available 24/7 for your convenience</p>
          </div>
        </div>

        <div class="showroom-hours">
          <h4>Showroom Hours</h4>
          <div class="contact-item"><strong>Mon - Fri:</strong> 8:00 AM - 5:00 PM</div>
          <div class="contact-item"><strong>Saturday:</strong> By appointment only</div>
          <div class="contact-item"><strong>Sunday:</strong> Closed</div>
        </div>
      </div>

      <div class="contact-form">
        <h3>Request Your Free Estimate</h3>

        <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST">
          <input type="hidden" name="oid" value="00D5f000005JQXK">
          <input type="hidden" name="retURL" value="https://lifetimehomesolutions.com/thank-you">

          <div class="form-group">
            <label for="first_name">First Name *</label>
            <input type="text" id="first_name" name="first_name" required>
          </div>

          <div class="form-group">
            <label for="last_name">Last Name *</label>
            <input type="text" id="last_name" name="last_name" required>
          </div>

          <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" id="email" name="email" required>
          </div>

          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone">
          </div>

          <div class="form-group">
            <label for="description">Tell us about your project</label>
            <textarea id="description" name="description" rows="4"></textarea>
          </div>

          <button type="submit" class="btn btn-primary btn-full">Get My Free Estimate</button>
        </form>
      </div>
    </div>
  </div>
</section>
