<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title or "Lifetime Home Services - Professional Home Services You Can Trust" }}</title>

  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700;800&display=swap" rel="stylesheet">

  {# 1) CSS with cache-buster using build SHA/timestamp #}
  <link rel="stylesheet" href="/assets/css/site.css?v={{ (build.sha or build.ts) }}" />

  {# 2) Minimal inline "style smoke test" so page never looks broken #}
  <style id="critical-smoke-test">
    :root{--max-w:1100px;--pad:16px}
    *{box-sizing:border-box}
    body{font-family:system-ui,Segoe UI,Roboto,Arial,sans-serif;color:#1a1a1a;line-height:1.5;margin:0}
    .navbar{display:flex;gap:20px;align-items:center;padding:12px 0;border-bottom:1px solid #eee}
    .nav-container{max-width:var(--max-w);margin:0 auto;padding:0 var(--pad);display:flex;align-items:center;justify-content:space-between}
    .nav-links{display:flex;gap:12px;list-style:none;margin:0;padding:0}
    .hero{position:relative;margin:12px 0 24px}
    .hero img{width:100%;height:clamp(220px,45vw,520px);object-fit:cover;border-radius:8px;display:block}
    .section{padding:32px 0}
    .container{max-width:var(--max-w);margin:0 auto;padding:0 var(--pad)}
  </style>

  {% if css %}<style>{{ css | safe }}</style>{% endif %}
</head>

<body class="shell lifetime brand-lifetime">
  <!-- Top nav -->
  <nav class="navbar">
    <div class="nav-container">
      <div class="brand-switcher">
        <a class="brand-logo {% if brand == 'lifetime' or not brand %}active{% endif %}" href="/">
          <img src="/assets/images/logos/lhs-logo.svg" alt="Lifetime Home Services" class="logo" />
        </a>
        <a class="brand-logo {% if brand == 'aih' %}active{% endif %}" href="/aih/">
          <img src="/assets/images/logos/aih-logo.svg" alt="America In-Home" class="logo" />
        </a>
        <a class="brand-logo {% if brand == 'cc' %}active{% endif %}" href="/cc/">
          <img src="/assets/images/logos/cc-logo.svg" alt="Closet Concepts" class="logo" />
        </a>
      </div>

      <button class="menu-toggle" aria-expanded="false" aria-controls="primary-nav">
        <span class="sr-only">Menu</span>
        ☰
      </button>

      <ul class="nav-links" id="primary-nav">
        <li><a href="{{ '/' | url }}">Home</a></li>
        <li><a href="{{ '/services/' | url }}">Services</a></li>
        <li><a href="{{ '/projects/' | url }}">Projects</a></li>
        <li><a href="{{ '/showroom/' | url }}">Showroom</a></li>
        <li><a href="{{ '/financing/' | url }}">Financing</a></li>
        <li><a href="{{ '/about/' | url }}">About</a></li>
        <li><a href="{{ '/service-areas/' | url }}">Service Areas</a></li>
        <li><a href="{{ '/contact/' | url }}">Contact</a></li>
      </ul>

      <a class="phone-btn" href="tel:+18339416888">(833) 941-6888</a>
    </div>
  </nav>

  <main>
    {{ content | safe }}
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      <div class="footer-phone"><a href="tel:+18339416888">(833) 941-6888</a></div>
      <div class="footer-info">
        <p>Professional Home Services | Licensed & Insured</p>
        <p>Serving Wisconsin, Illinois, Minnesota & Colorado</p>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 Lifetime Home Services Group. All rights reserved.</p>
        {% if brand == "cc" %}
        <div id="closet-footer">
          <p style="font-size: 0.8rem; color: #666;">formerly closetconcepts.com</p>
        </div>
        {% endif %}
      </div>
    </div>
  </footer>

  <!-- Build stamp for verification -->
  <footer class="site-footer">
    <div class="container">
      <small>
        Build: {{ collections.all | length }} · {{ (build.sha or "") | slice(0,7) }} · {{ build.ts }}
      </small>
    </div>
  </footer>

  <script defer src="/assets/js/site.js"></script>
</body>
</html>
