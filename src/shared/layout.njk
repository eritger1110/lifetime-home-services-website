<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title or "Lifetime Home Services" }}</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css" />
  {% if css %}<style>{{ css | safe }}</style>{% endif %}
</head>

<body class="brand-{{ brand or 'lifetime' }}">
  <header class="site-header">
    <div class="shell">
      <div class="logos">
        <a href="/" class="brand">
          {% if brand == "aih" %}
            <img src="/assets/AmericanIn-HomeLogo.jpg" alt="America In-Home" />
          {% elif brand == "cc" %}
            <img src="/assets/ClosetConceptsLogo.png" alt="Closet Concepts" />
          {% else %}
            <img src="/assets/LifetimeHomeServicesLogo.png" alt="Lifetime Home Services" />
          {% endif %}
        </a>
        <nav class="brands">
          <a href="https://lifetime-home-services-website.netlify.app/"> <img src="/assets/LifetimeHomeServicesLogo.png" alt="Lifetime" /></a>
          <a href="https://americainhome.com/"> <img src="/assets/AmericanIn-HomeLogo.jpg" alt="AIH" /></a>
          <a href="https://closetconcepts.com/"> <img src="/assets/ClosetConceptsLogo.png" alt="CC" /></a>
        </nav>
      </div>

      <nav class="main-nav">
        <a href="/">Home</a>
        <a href="/services/">Services</a>
        <a href="/service-areas/">Service Areas</a>
        <a href="/financing/">Financing</a>
        <a href="/about/">About</a>
        <a href="/contact/" class="cta">Get Free Estimate</a>
        <a class="phone" href="tel:+18339416888">(833) 941-6888</a>
      </nav>
    </div>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="shell">
      <div class="cols">
        <div>
          <strong>Showroom</strong><br>
          3485 North 124th Street, Brookfield, WI 53005<br>
          Hours: Mon–Fri 9–5, Sat by appt only
        </div>
        <div>
          <strong>Phone Support</strong><br>
          24/7 at <a href="tel:+18339416888">(833) 941-6888</a>
        </div>
        <div>
          <a href="/privacy/">Privacy Policy</a> · <a href="/terms/">Terms of Service</a>
        </div>
      </div>
      <p class="copy">© {{ "now" | date | replace("Jan ", "") | replace("Feb ", "") }} Lifetime Home Services</p>
    </div>
  </footer>

  <script src="/script.js" defer></script>
</body>
</html>
