<!DOCTYPE html>
<html lang="en" data-brand="{{ brand }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or (brandName + " - Smart Home Technology") }}</title>
  <meta name="description" content="{{ description or "Professional smart home automation, Control4 systems, home theater, and whole-home Wi-Fi solutions in Wisconsin." }}">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- CSS -->
  <link rel="stylesheet" href="/assets/css/site.css?v={{ (build.sha or build.ts) }}">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or (brandName + " - Smart Home Technology") }}">
  <meta property="og:description" content="{{ description or "Professional smart home automation, Control4 systems, home theater, and whole-home Wi-Fi solutions in Wisconsin." }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:image" content="{{ site.url }}/assets/images/aih/aih-showroom-picture.jpg">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title or (brandName + " - Smart Home Technology") }}">
  <meta name="twitter:description" content="{{ description or "Professional smart home automation, Control4 systems, home theater, and whole-home Wi-Fi solutions in Wisconsin." }}">
  <meta name="twitter:image" content="{{ site.url }}/assets/images/aih/aih-showroom-picture.jpg">
  
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "{{ brandName }}",
    "description": "Professional smart home automation, Control4 systems, home theater, and whole-home Wi-Fi solutions",
    "url": "{{ site.url }}{{ baseUrl }}",
    "telephone": "{{ phone }}",
    "address": {
      "@type": "PostalAddress",
      "addressRegion": "WI",
      "addressCountry": "US"
    },
    "serviceArea": {
      "@type": "State",
      "name": "Wisconsin"
    },
    "logo": "{{ site.url }}/assets/images/logos/aih-logo.svg"
  }
  </script>
  
  {% if breadcrumbs %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "{{ brandName }}",
        "item": "{{ site.url }}{{ baseUrl }}"
      }
      {% if breadcrumbs.length > 1 %}
      {% for crumb in breadcrumbs.slice(1) %}
      ,{
        "@type": "ListItem",
        "position": {{ loop.index + 1 }},
        "name": "{{ crumb.name }}",
        "item": "{{ site.url }}{{ crumb.url }}"
      }
      {% endfor %}
      {% endif %}
    ]
  }
  </script>
  {% endif %}
  
  {% if faqs %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {% for faq in faqs %}
      {
        "@type": "Question",
        "name": "{{ faq.question }}",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "{{ faq.answer }}"
        }
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
  </script>
  {% endif %}
</head>
<body>
  <!-- Skip Link -->
  <a href="#main" class="skip-link">Skip to main content</a>
  
  <!-- Header -->
  <header class="header" role="banner">
    <div class="container">
      <div class="header-content">
        <!-- Brand Switcher -->
        <div class="brand-switcher">
          <a href="/lifetime/" aria-label="Lifetime Home Services">
            <img src="/assets/images/logos/lhs-logo.svg" alt="Lifetime Home Services" class="brand-logo">
          </a>
          <a href="/cc/" aria-label="Closet Concepts">
            <img src="/assets/images/logos/cc-logo.svg" alt="Closet Concepts" class="brand-logo">
          </a>
          <a href="/aih/" aria-label="America In-Home" aria-current="{% if brand == 'aih' %}page{% endif %}">
            <img src="/assets/images/logos/aih-logo.svg" alt="America In-Home" class="brand-logo">
          </a>
        </div>
        
        <!-- Mobile Menu Toggle -->
        <button class="menu-toggle" aria-expanded="false" aria-controls="main-nav" aria-label="Toggle navigation">
          ☰
        </button>
        
        <!-- Navigation -->
        <nav class="nav" id="main-nav" role="navigation">
          <a href="{{ baseUrl }}">Home</a>
          <a href="{{ baseUrl }}control4/">Control4</a>
          <a href="{{ baseUrl }}home-theater/">Home Theater</a>
          <a href="{{ baseUrl }}whole-home-wifi/">Whole-Home Wi-Fi</a>
          <a href="{{ baseUrl }}smart-home/">Smart Home</a>
          <a href="/service-areas/">Service Areas</a>
          <a href="{{ baseUrl }}#contact">Contact</a>
          <a href="tel:{{ phone }}" class="phone-btn">{{ phone }}</a>
        </nav>
      </div>
    </div>
  </header>
  
  <!-- Breadcrumbs -->
  {% if breadcrumbs %}
  <nav class="breadcrumbs" aria-label="Breadcrumb">
    <div class="container">
      {% for crumb in breadcrumbs %}
        {% if loop.last %}
          <span>{{ crumb.name }}</span>
        {% else %}
          <a href="{{ crumb.url }}">{{ crumb.name }}</a>
          <span> → </span>
        {% endif %}
      {% endfor %}
    </div>
  </nav>
  {% endif %}
  
  <!-- Main Content -->
  <main id="main" role="main">
    {{ content | safe }}
  </main>
  
  <!-- Footer -->
  <footer class="footer" role="contentinfo">
    <div class="container">
      <div class="footer-content">
        <p>&copy; {% year %} {{ brandName }}. All rights reserved.</p>
        <p>Serving Wisconsin with professional smart home technology.</p>
        <p>
          <a href="tel:{{ phone }}">{{ phone }}</a> | 
          <a href="/service-areas/">Service Areas</a> | 
          <a href="{{ baseUrl }}#contact">Contact Us</a>
        </p>
      </div>
    </div>
  </footer>
  
  <!-- Sticky Mobile CTA -->
  <div class="sticky-cta">
    <a href="tel:{{ phone }}" class="btn btn-primary btn-full">Call {{ phone }}</a>
  </div>
  
  <!-- JavaScript -->
  <script src="/assets/js/site.js?v={{ (build.sha or build.ts) }}"></script>
</body>
</html>
