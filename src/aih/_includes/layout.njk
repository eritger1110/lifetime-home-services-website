<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title or "America In-Home - Smart Home Automation Experts" }}</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css?v={{ collections.all | length }}">
  {% if css %}<style>{{ css | safe }}</style>{% endif %}
</head>

<body class="shell aih">
  <!-- Top nav -->
  <nav class="navbar">
    <div class="nav-container">
      <div class="brand-switcher">
        <a class="brand-logo {% if brand == 'lifetime' %}active{% endif %}" href="/lifetime/">
          <img src="/assets/LifetimeHomeServicesLogo.png" alt="Lifetime Home Services" />
        </a>
        <a class="brand-logo {% if brand == 'aih' or not brand %}active{% endif %}" href="/aih/">
          <img src="/assets/AmericaIn-HomeLogo.jpg" alt="America In-Home" />
        </a>
        <a class="brand-logo {% if brand == 'cc' %}active{% endif %}" href="/cc/">
          <img src="/assets/ClosetConceptsLogo.png" alt="Closet Concepts" />
        </a>
      </div>

      <ul class="nav-links">
        <li><a href="/aih/">Home</a></li>
        <li><a href="/aih/services/">Services</a></li>
        <li><a href="/aih/gallery/">Gallery</a></li>
        <li><a href="/aih/packages/">Packages</a></li>
        <li><a href="/aih/about/">About</a></li>
        <li><a href="/aih/showroom/">Showroom</a></li>
        <li><a href="/aih/financing/">Financing</a></li>
        <li><a href="/aih/contact/">Contact</a></li>
      </ul>

      <a class="phone-btn" href="tel:+18339416888">(833) 941-6888</a>
    </div>
  </nav>

  <main>
    {{ content | safe }}
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      <div class="footer-phone"><a href="tel:+18339416888">(833) 941-6888</a></div>
      <div class="footer-info">
        <p>Smart Home Automation | Available 24/7</p>
        <p>Serving Wisconsin, Illinois, Minnesota & Colorado</p>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 America In-Home. All rights reserved.</p>
        <div id="aih-footer">
          <p style="font-size: 0.8rem; color: #666;">A division of Lifetime Home Services Group</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="/script.js" defer></script>
</body>
</html>
