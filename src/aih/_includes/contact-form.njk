<!-- Contact Form Section -->
<section class="contact-section" id="contact">
  <div class="container">
    <div class="section-header">
      <h2>Get Your Free Smart Home Consultation</h2>
      <p>Ready to transform your home with smart technology? Let's discuss your vision and create a custom solution.</p>
    </div>
    
    <div class="contact-grid">
      <!-- Contact Info -->
      <div class="contact-info">
        <h3>Start Your Smart Home Journey</h3>
        
        <div class="contact-item">
          <div class="phone-highlight">
            <strong>Call Now</strong>
            <a href="tel:{{ phone }}">{{ phone }}</a>
          </div>
        </div>
        
        <div class="contact-item">
          <h4>Showroom Hours</h4>
          <p><strong>Mon - Fri:</strong> 9:00 AM - 6:00 PM</p>
          <p><strong>Saturday:</strong> 10:00 AM - 4:00 PM</p>
          <p><strong>Sunday:</strong> By appointment only</p>
        </div>
        
        <div class="contact-item">
          <h4>Service Areas</h4>
          <p>Serving Wisconsin with professional smart home technology installation and support.</p>
          <a href="/service-areas/">View All Service Areas</a>
        </div>
        
        <div class="contact-item">
          <h4>Visit Our Showroom</h4>
          <p>Experience smart home technology firsthand with live demonstrations of Control4, home theater, and automation systems.</p>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="contact-form">
        <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST" netlify netlify-honeypot="bot-field">
          <!-- Salesforce Web-to-Lead -->
          <input type="hidden" name="oid" value="00D5f000005JQXK">
          <input type="hidden" name="retURL" value="{{ site.url }}/thank-you/">
          
          <!-- UTM Tracking -->
          <input type="hidden" name="utm_source" id="utm_source">
          <input type="hidden" name="utm_medium" id="utm_medium">
          <input type="hidden" name="utm_campaign" id="utm_campaign">
          <input type="hidden" name="utm_content" id="utm_content">
          <input type="hidden" name="utm_term" id="utm_term">
          <input type="hidden" name="page_path" value="{{ page.url }}">
          
          <!-- Honeypot -->
          <div style="display: none;">
            <label>Don't fill this out: <input name="bot-field"></label>
          </div>
          
          <div class="form-group">
            <label for="first_name">First Name *</label>
            <input type="text" id="first_name" name="first_name" required>
          </div>
          
          <div class="form-group">
            <label for="last_name">Last Name *</label>
            <input type="text" id="last_name" name="last_name" required>
          </div>
          
          <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" id="email" name="email" required>
          </div>
          
          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" placeholder="(___) ___-____">
          </div>
          
          <div class="form-group">
            <label for="zip">Zip Code</label>
            <input type="text" id="zip" name="zip" maxlength="5">
          </div>
          
          <div class="form-group">
            <label for="project_type">Smart Home Interest</label>
            <select id="project_type" name="project_type">
              <option value="">Select your primary interest</option>
              <option value="Control4 Systems">Control4 Home Automation</option>
              <option value="Home Theater">Home Theater</option>
              <option value="Whole-Home Wi-Fi">Whole-Home Wi-Fi</option>
              <option value="Smart Home Integration">Smart Home Integration</option>
              <option value="Security Systems">Security Systems</option>
              <option value="Lighting Control">Lighting Control</option>
              <option value="Audio Systems">Audio Systems</option>
              <option value="Complete Smart Home">Complete Smart Home</option>
              <option value="Other">Other</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="description">Tell us about your smart home goals</label>
            <textarea id="description" name="description" rows="4" placeholder="What smart home features are you most interested in? Any specific challenges or goals?"></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary btn-full">Get My Free Consultation</button>
        </form>
      </div>
    </div>
  </div>
</section>

