{
  "name": "lifetime-sites",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:lifetime": "npx @11ty/eleventy --config=eleventy.lifetime.js",
    "build:aih": "npx @11ty/eleventy --config=eleventy.aih.js",
    "build:cc": "npx @11ty/eleventy --config=eleventy.cc.js",
    "build:all": "npm run build:lifetime && npm run build:aih && npm run build:cc",
    "build:root": "node scripts/postbuild.cjs",
    "postbuild": "node scripts/postbuild.cjs",
    "prebuild:lifetime": "node scripts/generate-headers.js",
    "prebuild:aih": "node scripts/generate-headers.js",
    "prebuild:cc": "node scripts/generate-headers.js",
    "validate:pre-commit": "node scripts/pre-commit-checks.js",
    "validate:build": "node scripts/validate-build.js",
    "validate:deployment": "node scripts/deployment-safety.js",
    "validate:all": "npm run validate:pre-commit && npm run validate:build && npm run validate:deployment",
    "build:safe": "npm run validate:pre-commit && npm run build:all && npm run build:root && npm run validate:build"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1"
  }
}

